// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  credits       Int       @default(10)
  plan          Plan      @default(FREE)
  stripeId      String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  images        Image[]
  transactions  Transaction[]
  sessions      Session[]
  
  @@map("users")
}

model Image {
  id          String      @id @default(cuid())
  userId      String
  prompt      String?
  style       String?
  originalUrl String?
  generatedUrl String
  thumbnailUrl String?
  type        ImageType   @default(GENERATION)
  creditsUsed Int         @default(5)
  status      ImageStatus @default(PENDING)
  metadata    Json?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("images")
}

model Transaction {
  id            String           @id @default(cuid())
  userId        String
  type          TransactionType
  amount        Int
  credits       Int?
  stripeId      String?          @unique
  status        TransactionStatus @default(PENDING)
  metadata      Json?
  createdAt     DateTime         @default(now())
  
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("transactions")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String  @unique
  expires      DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

enum Plan {
  FREE
  BASIC
  PRO
  UNLIMITED
}

enum ImageType {
  GENERATION
  EDITING
  UPSCALE
}

enum ImageStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum TransactionType {
  PURCHASE
  REFUND
  BONUS
  USAGE
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}